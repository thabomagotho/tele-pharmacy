<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Upload Prescription - Tele-Pharmacy</title>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
  <header>
  <%- include('partials/_navbar') %>

</header>

  <main>
    <section class="upload-section">
      <h1>Upload Your Prescription</h1>
      <p>Please fill out your details and upload a clear image or document of your prescription.</p>
      
      <form action="/upload" method="POST" enctype="multipart/form-data">
      
        <!-- Personal Information -->
        <div class="form-group">
          <label for="firstName">First Name:</label>
          <input type="text" id="firstName" name="firstName" required>
        </div>
  
        <div class="form-group">
          <label for="surname">Surname:</label>
          <input type="text" id="surname" name="surname" required>
        </div>
  
        <div class="form-group">
          <label for="mobile">Mobile Number:</label>
          <input type="tel" id="mobile" name="mobile" required>
        </div>
  
        <div class="form-group">
          <label for="email">Email Address:</label>
          <input type="email" id="email" name="email" required>
        </div>
  
        <!-- Delivery or Collection -->
        <div class="form-group">
          <label>Order Type:</label>
          <div class="order-type-options">
            <label><input type="radio" name="orderType" value="Collect" required> Collect at Store</label>
            <label><input type="radio" name="orderType" value="Delivery" required> Deliver to Address</label>
          </div>
        </div>
  
        <!-- Delivery Address (only if delivery selected) -->
        <div class="form-group">
          <label for="address">Delivery Address:</label>
          <textarea id="address" name="address" rows="3" placeholder="Only if you choose Delivery"></textarea>
        </div>
  
        <!-- Payment Method -->
        <div class="form-group">
          <label for="paymentMethod">Payment Method:</label>
          <select id="paymentMethod" name="paymentMethod" required>
            <option value="">--Please choose--</option>
            <option value="Cash">Cash</option>
            <option value="Card">Card</option>
            <option value="Online">Online Payment</option>
          </select>
        </div>
  
        <!-- Upload Prescription -->
        <div class="form-group">
          <label for="fileUpload">Upload Prescription:</label>
          <input type="file" id="fileUpload" name="prescription" required>
        </div>
  
        <!-- Submit -->
        <button type="submit" class="btn">Submit Order</button>
      </form>
    </section>
  </main>
  

  <footer>
    <p>&copy; 2025 Tele-Pharmacy. All rights reserved.</p>
  </footer>
  <!-- Scroll to Top Button -->
  <button id="scrollToTopBtn" title="Go to top">&#8679;</button>
  <script>
    const scrollToTopBtn = document.getElementById("scrollToTopBtn");
    window.onscroll = function () {
      if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
        scrollToTopBtn.style.display = "block";
      } else {
        scrollToTopBtn.style.display = "none";
      }
    };
    scrollToTopBtn.addEventListener('click', function () {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  </script>
</body>
</html>
