  <!-- AOS Animation -->
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>AOS.init();</script>

  <!-- Scroll to Top Button -->
  <button id="scrollToTopBtn" title="Go to top">&#8679;</button>
  <script>
    const scrollToTopBtn = document.getElementById("scrollToTopBtn");
    window.onscroll = function () {
      if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
        scrollToTopBtn.style.display = "block";
      } else {
        scrollToTopBtn.style.display = "none";
      }
    };
    scrollToTopBtn.addEventListener('click', function () {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  </script>

  <!-- Chatbot Toggle -->
  <div id="chatbot-toggle" onclick="toggleChatbot()">üí¨</div>

  <!-- Chatbot Container -->
  <div id="chatbot-container" class="hidden">
    <div id="chatbot-header">
      <span>üíä Ask the Pharmacist</span>
      <button onclick="toggleChatbot()">‚úñ</button>
    </div>
    <div id="chatbot-messages"></div>
    <form id="chatbot-form">
      <input type="text" id="chatbot-input" placeholder="Ask about your meds..." required />
      <button type="submit">Send</button>
    </form>
  </div>

  <script>
    function toggleChatbot() {
      document.getElementById('chatbot-container').classList.toggle('hidden');
    }

    document.getElementById('chatbot-form').addEventListener('submit', async function (e) {
      e.preventDefault();
      const input = document.getElementById('chatbot-input');
      const message = input.value;
      appendMessage('user', message);
      input.value = '';

      try {
        const res = await fetch('/chat', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ message })
        });
        const data = await res.json();
        appendMessage('bot', data.reply);
      } catch {
        appendMessage('bot', "‚ö†Ô∏è Sorry, I couldn't get a response.");
      }
    });

    function appendMessage(sender, text) {
      const messages = document.getElementById('chatbot-messages');
      const div = document.createElement('div');
      div.className = sender;
      div.textContent = text;
      messages.appendChild(div);
      messages.scrollTop = messages.scrollHeight;
    }
  </script>

  <!-- Dropdown JS -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const toggle = document.getElementById('dropdownToggle');
      const menu = document.getElementById('dropdownMenu');

      if (toggle && menu) {
        toggle.addEventListener('click', function (e) {
          e.preventDefault();
          menu.classList.toggle('show-dropdown');
        });

        document.addEventListener('click', function (e) {
          if (!toggle.contains(e.target) && !menu.contains(e.target)) {
            menu.classList.remove('show-dropdown');
          }
        });
      }
    });
  </script>
